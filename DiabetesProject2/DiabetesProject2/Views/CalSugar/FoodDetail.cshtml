<div ng-controller="FoodDetailController">
    <div class="row">
        <div id="head" class="panel panel-primary col-lg-12 col-md-12 col-sm-12 col-xs-12" role="main">
            <br />
            <div class="x_title">
                <h2 style="color:midnightblue"><strong>Add Food</strong></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a href="/#/ShowFood"><img class="img-responsive pull-right" width="60" src="~/Images/add1.png" /></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <br />

            <div class="row top_tiles">
                <div class="animated flipInY col-lg-12 col-md-12 col-sm-12 col-xs-12" href="/#/AddFood">
                    <div class="tile-stats">
                        <a href="/#/FoodDetail">
                            <div class="count"><h2><strong>Fried Rice With Pork  ข้าวผัดหมู</strong></h2></div>
                            <div class="icon"><h3 style="color:cadetblue">1</h3></div>
                            <h3 style="color:cadetblue">Number</h3>
                            <h3 style="color:cadetblue">Size        :       100 g</h3>
                        </a>
                    </div>
                </div>
            </div>
            <br />
            <div class="row top_tiles" style="color:mediumslateblue">
                <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <div class="tile-stats alert alert-success alert-dismissible fade in" role="alert">
                        <div class="icon"><i class="glyphicon glyphicon-asterisk glyphicon" style="color:white"></i></div>
                        <div class="count">20.7 g</div>
                        <h3 style="color:forestgreen">Carbs (g)</h3>
                    </div>
                </div>
                <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <div class="tile-stats alert alert-info alert-dismissible fade in" role="alert">
                        <div class="icon"><i class="glyphicon glyphicon-asterisk glyphicon" style="color:white"></i></div>
                        <div class="count">8.4</div>
                        <h3 style="color:darkslateblue">Fat (g)</h3>
                    </div>
                </div>
                <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <div class="tile-stats alert alert-warning alert-dismissible fade in" role="alert">
                        <div class="icon"><i class="glyphicon glyphicon-asterisk glyphicon" style="color:white"></i></div>
                        <div class="count">4.8</div>
                        <h3 style="color:red">Protein (g)</h3>
                    </div>
                </div>
                <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <div class="tile-stats alert alert-danger alert-dismissible fade in" role="alert">
                        <div class="icon"><i class="glyphicon glyphicon-cutlery" style="color:white"></i></div>
                        <div class="count">178</div>
                        <h3 style="color:lightpink">Calories</h3>
                    </div>
                </div>
            </div>
            <br />
            <br />
            <br />
        </div>
    </div>
</div>





